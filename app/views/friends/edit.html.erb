<div class="container">
<h1>Edit <%= @friend.name %></h1>
 <%= simple_form_for [@user, @friend] do |f| %>
      <%= f.error_notification %>
      <%= f.input :first_name, error: 'Please enter the first name of your friend' %>
      <%= f.input :last_name, error: 'Please enter the last name of your friend' %>
      <%= f.input :age, error: 'Please enter the age' %>
      <%= f.input :gender, collection: ['male', 'female'], error: 'Please enter gender' %>
      <%= f.input :city, error: 'Please enter city' %>
      <%= f.input :address, error: 'Please enter valid address' %>
      <%= f.input :description, error: 'Please describe your friend' %>
      <%= f.input :photo %>
      <%= f.input :photo_cache, as: :hidden %>
      <%= f.hidden_field :user_id, value: @user.id %>
      <%= f.submit "Submit", class: "btn btn-primary" %>
    <% end %>

</div>

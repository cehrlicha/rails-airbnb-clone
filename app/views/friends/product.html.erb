<div class="wrapper">
  <div class="friendpictures">
    <div class="friendbanner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url(u);">
      <div class="banner-content">
        <h1></h1>
        <p></p>
      </div>
      <div class="ppimage">
      <%= cl_image_tag @friend.photo, height: 300, width: 400, crop: :fill %>
      </div>
      <div class="ppname">
        <h2><%= @friend.name %></h2>
      </div>
    </div>
  </div>

  <div class="container text-center">
    <div class="frienddescritpion">
        <p> <%= @friend.description %>
        </p>
    </div>

  </div>

  <div class=" text-center description">
    <%= link_to "Back to list", root_path, class: "btn btn-primary" %>
  </div>
</div>

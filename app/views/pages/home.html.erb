<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,0,0,0.6) 0%, rgba(250,250,250,0.1) 70%), url('https://static.pexels.com/photos/165263/pexels-photo-165263.jpeg');">
  <div class="banner-content">
    <h1>WANNA MAKE NEW FRIENDS ?</h1>
    <p>Make real friends!</p>
    <form action="/results" method="get" class="form-inline" name="search">
          <input type="text" class="form-control margin-xs" name="city" placeholder="Lisbon">
          <input type="text" class="form-control margin-xs" name="gender" placeholder="gender">
          <input type="text" class="form-control margin-xs" name="age" placeholder="age">
          <div class="input-group date">
              <input type="text" class="form-control" placeholder="<%= Date.today %>" name="date" id='Datetimepicker'>
              <div class="input-group-addon">
                  <span class="glyphicon glyphicon-th"></span>
              </div>
              <%= content_for(:after_js) do %>
              <script type="text/javascript">
                  $(function () {
                      $('#Datetimepicker').datetimepicker({ dateFormat: 'yyyy-mm-dd' });
                  });
              </script>
              <% end %>
          </div>


          <input type="submit" value="Search" class="btn btn-primary">


    </form>
  </div>
</div>


<div class="container">
  <div class="row">

    <% @sorted_friends.each do |friend| %>
    <div class="col-xs-6 col-sm-4">
      <!-- insert <div class="card"> -->


      <%= link_to friend_path(friend) do %>
      <div class="vertical-card" style='background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url("<%= cl_image_path friend.photo, height: 400, width: 400, crop: :crop, gravity: :face %>");'>

        <div class="card-description">
          <h2><%= friend.name %></h2>
          <p><%= friend.price %>â‚¬/hour - Av. rating: <%= friend.average_friend_rating %></p>
        </div>
      </div>

      <% end %>

    </div>
    <% end %>
  </div>
   </div>
